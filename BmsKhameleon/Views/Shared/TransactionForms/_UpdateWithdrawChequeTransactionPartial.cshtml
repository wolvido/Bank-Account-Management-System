@model ChequeTransactionUpdateRequest

<form method="post">

    <section class="popup popup_modify">
        <header class="popup__header">
            Modify Withdrawal
        </header>

        <div class="popup__content notice ">
            <div class="notice__validation" asp-validation-summary="All">Please provide information to all&nbsp;<em>required</em>&nbsp;fields below.</div>
            <div class="notice__transaction-medium transaction-controller__transaction-medium">You are about to Issue a <strong>Check</strong> on <span class="transactions-overview__notice-date">@Model.TransactionDate.ToString("MMM d, yyyy")</span></div>
        </div>

        <fieldset class="popup__content radio-controls transaction-controller__radio-controls transaction-controller__radio-controls_withdraw">
            <div class="radio-controls__group">
                <input class="radio-controls__radio-input transactions-overview__cash-withdraw-update" name="withdraw-type" type="radio" value="Cash"  />
                <label class="radio-controls__label">Cash Withdrawal</label>
            </div>

            <div class="radio-controls__group">
                <input class="radio-controls__radio-input transactions-overview__cheque-withdraw-update" name="withdraw-type" type="radio" value="Cheque" checked />
                <label class="radio-controls__label">Issue Check</label>
            </div>
        </fieldset>

        <fieldset class="popup__content transaction-controller__fieldset transaction-controller__fieldset_withdraw transaction-controller__fieldset_cheque">

            <input asp-for="TransactionId" type="hidden" />
            <input asp-for="AccountId" type="hidden" />
            <input asp-for="TransactionType" type="hidden" />

            <div class="form-group">
                <label class="form-group__label">Check Issue Date</label>
                <input asp-for="TransactionDate" class="form-group__input form-group__input_date transaction-controller__cheque-date-input transactions-overview__input-date" type="date" data-date="@Model.TransactionDate.ToString("MMM d, yyyy")" data-date-format="ll" value="@Model.TransactionDate.ToString("yyyy-MM-dd")" />
            </div>

            <div class="form-group">
                <label class="form-group__label">Check Number</label>
                <input asp-for="ChequeNumber" class="form-group__input transaction-controller__cheque-number-input" placeholder="000000000000000" />
            </div>

            <div class="form-group">
                <label class="form-group__label">Payee (Company/Supplier/Customer Name)</label>
                <input asp-for="Payee" class="form-group__input transaction-controller__cheque-payee-input" placeholder="John Doe"/>
            </div>

            <div class="form-group">
                <label class="form-group__label">Check Issuance Amount</label>
                <input asp-for="Amount" class="form-group__input transaction-controller__cheque-amount-input" placeholder="0.00"/>
            </div>

            <div class="form-group">
                <label class="form-group__label">Note</label>
                <textarea asp-for="Note" class="form-group__input transaction-controller__cheque-note-input" placeholder="Add Note"></textarea>
            </div>

        </fieldset>

        <footer class="popup__footer">
            <button type="button" class="button button_cancel popup__show-delete-button">Delete</button>
            <input asp-controller="TransactionForms" asp-action="UpdateTransactionCheque" type="submit" class="button" value="Modify" />
            <button type="button" class="button  button_cancel overlay__cancel">Cancel</button>
        </footer>
    </section>

    <section class="popup popup_delete">
        <header class="popup__header">
            Delete Transaction?
        </header>

        <section class="popup__content">
            <p>
                You are about to delete a Transaction. This action cannot be undone.
            </p>
        </section>

        <footer class="popup__footer">
            <input asp-controller="TransactionForms" asp-action="DeleteTransaction" asp-route-transactionId="@Model.TransactionId" type="submit" class="button" value="Delete" />
            <button type="button" class="button button_cancel overlay__cancel">Cancel</button>
        </footer>
    </section>
</form>