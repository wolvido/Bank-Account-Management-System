<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title</title>
    <link href="~/common.blocks/common-blocks.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery-3.7.1.min.js" async defer></script>
    <script src="~/lib/jquery/dist/jquery.validate.min.js" defer></script>
    <script src="~/lib/jquery/dist/jquery.validate.unobtrusive.min.js" defer></script>
    <script src="~/lib/moment/moment.js" async defer> </script>

    @await RenderSectionAsync("styles", false)
</head>

<body class="page">
    <header class="header">
        <div class="header__main">
            <img class="header__logo" src="~/common.blocks/header/BMS-Logo.png" />

            <div class="header__toolbar">
                <button class="header__button header__button_small button button_green">Admin</button>
                <button class="header__button header__button_small button button_green">User Manual</button>
                <button class="header__button button">Log Out</button>
            </div>

        </div>

        <div class="header__details">
            <span class="header__user-details">Welcome <strong class="header__username">WINZYL C OLVIDO</strong> </span>
            <time class="header__time" datetime="2024-04-09T12:00">04/09/2024 12:00</time>
        </div>
    </header>
    @RenderBody()
</body>

</html>
