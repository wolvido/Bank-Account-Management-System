@section styles {
    <link href="~/desktop.blocks/create-account/create-account.css" rel="stylesheet" type="text/css" />
    <script src="~/desktop.blocks/create-account/create-account.js" async defer></script>
}

<main class="main create-account">
    <form class="create-account__form">
        <div class="create-account__toolbar">
            <input class="create-account__toolbar-button button" type="submit" value="Create"/>
            <a class="create-account__toolbar-button create-account__toolbar-button_cancel button button_cancel button_link">Cancel</a>
        </div>

        @if (@ViewBag.HasErrors)
        {
            <div class="create-account__validation-errors">Please provide accurate information to all&nbsp;<em>required</em>&nbsp;fields below.</div>
        }
        else
        {
            <div class="create-account__validation-errors"></div>
        }

        <fieldset class="create-account__form-content">

            <div class="create-account__form-group form-group">
                <label class="create-account__form-label form-group__label form-group__label_error">Bank Name </label>
                <input class="create-account__form-input form-group__input" placeholder="Bank Name" />
            </div>

            <div class="create-account__form-group form-group">
                <label class="create-account__form-label form-group__label">Account Type</label>
                <select class="create-account__form-input create-account__form-input_account-type form-group__input form-group__input_select ">
                    <option>Savings Account</option>
                    <option>Checking Account</option>
                    <option>Joint Account</option>
                    <option>Payroll</option>
                </select>
            </div>

            <div class="create-account__form-group form-group">
                <label class="create-account__form-label form-group__label">Account Number </label>
                <input class="create-account__form-input form-group__input" placeholder="Account Number" />
            </div>

            <div class="create-account__form-group form-group">
                <label class="create-account__form-label form-group__label">Branch of Account (Region/Province-City) </label>
                <input class="create-account__form-input form-group__input" placeholder="Branch" />
            </div>

            <div class="create-account__form-group form-group">
                <label class="create-account__form-label form-group__label">Account Name (Payor) </label>
                <input class="create-account__form-input form-group__input" placeholder="Account Name" />
            </div>

            <div class="create-account__form-group  create-account__form-group_joint form-group">
                <label class="create-account__form-label form-group__label form-group__label_error">Joint Account Name </label>
                <input class="create-account__form-input form-group__input" placeholder="Account Name" />
            </div>

            <div class="create-account__form-group form-group">
                <label class="create-account__form-label form-group__label form-group__label_error"> <strong>Beggining Balance to Enroll</strong> </label>
                <input class="create-account__form-input form-group__input form-group__input_value-bold" placeholder="0.00" />
            </div>

        </fieldset>

    </form>
</main>