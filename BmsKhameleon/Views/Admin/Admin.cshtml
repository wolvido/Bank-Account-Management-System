@model RegisterViewModel

@section styles {
@*     <link href="~/desktop.blocks/admin/admin.css" rel="stylesheet" type="text/css"/> *@
    <script src="~/desktop.blocks/admin/admin.js" defer></script>
}

<main class="main admin">

    <div class="admin__table">

    </div>

    <div>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>

    <form asp-controller="Admin" asp-action="Register" method="post">
        <div class="form-group">
            <label class="form-group__label">Password</label>
            <input class="form-group__input" asp-for="Password" />
        </div>

        <div class="form-group">
            <label class="form-group__label">Username</label>
            <input class="form-group__input" asp-for="UserName" />
        </div>

        
        <fieldset class="form-group radio-controls">
            @{
                var admin = Enum.Parse<UserRoleOptions>("Admin");
                var user = Enum.Parse<UserRoleOptions>("User");
            }
            <div class="radio-controls__group">
                <label class="radio-controls__label">Admin</label>
                <input class="radio-controls__radio-input" asp-for="UserRole" type="radio" name="UserRole" value="@admin" />
            </div>

            <div class="radio-controls__group">
                <label class="radio-controls__label">User</label>
                <input class="radio-controls__radio-input" asp-for="UserRole" type="radio" name="UserRole" value="@user" />
            </div>
            
        </fieldset>

        <button class="button" type="submit">Register</button>
    </form>

</main>